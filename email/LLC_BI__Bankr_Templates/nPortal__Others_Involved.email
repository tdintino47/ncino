<messaging:emailTemplate subject="You've been added to Others Involved on an Online Application" recipientType="Contact">
    <messaging:htmlEmailBody >
        <html>
            <body>
                <table style="width: 100%;">
                    <tr>
                        <td align="center">
                            <table>
                                <tr>
                                    <td align="center">
                                        <apex:image url="{!$Label.nportal__email_no_reply_logo}"
                                            style="height: 70px; max-height: 70px;"
                                            />
                                    </td>
                                </tr>
                            </table>
                            <div style="width: 400px; font-family: 'Salesforce Sans', Arial, sans-serif; text-align: left;">
                                <div style="background-color: #f2f5f8; color: #162c52; padding: 20px 30px 20px 30px;">
                                    <h1>
                                        <strong style="font-weight: 300; color: #162c52;">
                                            Hi, {!recipient.name}!
                                        </strong>
                                    </h1>
                                    <p style="color: #162c52;">
                                        Greetings from {!$Organization.Name}. You have been added as an involved party on an online application.
                                    </p>
                                    <p style="color: #162c52;">
                                        You're good-to-go until the application has been pre-approved. We'll shoot you another email when it's time to upload personal documents, so we can get you an official offer.
                                    </p>
                                    <p style="color: #162c52;">
                                        If you have any concerns, or you feel you should not be part of this application, give us a call at {!$Organization.Phone}.
                                    </p>
                                    <p style="color: #162c52;">
                                        Thanks!
                                    </p>
                                    <p style="color: #162c52;">
                                        - The Team at {!$Organization.Name}
                                    </p>
                                </div>
                                <table style="width: 400px; background-color: #dce1eb; color: #5e7190; padding: 20px; font-size: 8pt;">
                                    <tr>
                                        <td>
                                            {!$Organization.Name}
                                        </td>
                                        <td align="right">
                                            {!$Label.Email_No_Reply_From}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            {!$Organization.Street}
                                        </td>
                                        <td align="right">
                                            {!$Organization.Phone}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            {!$Organization.City}, {!$Organization.State} {!$Organization.PostalCode}
                                        </td>
                                        <td align="right">
                                            &nbsp;
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>
                </table>
            </body>
        </html>
    </messaging:htmlEmailBody>
    <messaging:plainTextEmailBody >
        Hi, {!recipient.FirstName}!
        Greetings from {!$Organization.Name}. You have been added as an involved party to an online application.
        You're good-to-go until the application has been pre-approved. We'll shoot you another email when it's time to upload personal documents, so we can get you an official offer.
        If you have any concerns, or you feel you should not be part of this application, give us a call at {!$Organization.Phone}.
        Thanks!
        - The Team at {!$Organization.Name}
        {!$Organization.Name}
        {!$Organization.Street}
        {!$Organization.City}, {!$Organization.State} {!$Organization.PostalCode}
        {!$Label.nportal__email_no_reply_from}
        {!$Organization.Phone}
    </messaging:plainTextEmailBody>
</messaging:emailTemplate>