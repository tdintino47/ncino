<messaging:emailTemplate subject="Welcome" recipientType="User" relatedToType="Contact">
    <messaging:htmlEmailBody >
        <html>
            <body>
                <table style="width: 100%;">
                    <tr>
                        <td align="center">
                            <table>
                                <tr>
                                    <td align="center">
                                        <apex:image url="{!$Label.nportal__email_no_reply_logo}"
                                            style="height: 70px; max-height: 70px;"
                                            />
                                    </td>
                                </tr>
                            </table>
                            <div style="width: 400px; font-family: 'Salesforce Sans', Arial, sans-serif; text-align: left;">
                                <div style="background-color: #f2f5f8; color: #162c52; padding: 20px 30px 20px 30px;">
                                    <h1>
                                        <strong style="font-weight: 300; color: #162c52;">
                                            Hi {!recipient.FirstName},
                                        </strong>
                                    </h1>
                                    <p style="color: #162c52;">
                                        It's time to log in to {!$Organization.Name}.
                                    </p>
                                    <c:PortalLink buttonText="Login to Get Started" />
                                    <p style="color: #162c52;">
                                        If you have any questions or concerns, give us a call at {!$Organization.Phone}.
                                    </p>
                                    <p style="color: #162c52;">
                                        Thanks!<br />
                                        The Team at {!$Organization.Name}
                                    </p>
                                </div>
                            </div>
                            <table style="width: 400px; background-color: #dce1eb; color: #5e7190; padding: 20px; font-size: 8pt;">
                                <tr>
                                    <td>
                                        {!$Organization.Name}
                                    </td>
                                    <td align="right">
                                        {!$Label.Email_No_Reply_From}
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        {!$Organization.Street}
                                    </td>
                                    <td align="right">
                                        {!$Organization.Phone}
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        {!$Organization.City}, {!$Organization.State} {!$Organization.PostalCode}
                                    </td>
                                    <td align="right">
                                        &nbsp;
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </body>
        </html>
    </messaging:htmlEmailBody>

    <messaging:plainTextEmailBody >
Hi {!recipient.FirstName},

It's time to log in to {!$Organization.Name}.

<c:CommunityURL />

If you have any questions or concerns, give us a call at {!$Organization.Phone}.

Thanks!
The Team at {!$Organization.Name}

{!$Organization.Name}
{!$Organization.Street}
{!$Organization.City}, {!$Organization.State} {!$Organization.PostalCode}

{!$Label.nportal__email_no_reply_from}
{!$Organization.Phone}
    </messaging:plainTextEmailBody>
</messaging:emailTemplate>